# config
NMAX        = 50001          # maximum number of particles
nleft       = 30           # n of particles in uniform length (1D)
x0          = 0             # center of x 
xmin        = -1.0          # left edge 
xmax        = 1.0           # right edge 
ymin        = -0.5          # y range
ymax        = 0.5           # y range
zmin        = -0.5          # z range
zmax        = 0.5           # z range

# density
rholeft     = 1.0           # left density
rhoright    = 0.125         # right density 

# pressure
pleft       = 1.0           # left pressure 
pright      = 0.1           # right pressure 
EoS         = 0             # equation of state, 0 for adiabatic, 1 for isothermal        
gamma       = 1.4           # gamma for adiabatic EoS

# SPH parameters
hfact       = 2           # smooth range (=hfact*dx), should be less than nghost 
# nghost      = 6           # boundary particles, 

# viscosity 
alpha       = 1.0           # first order viscosity
beta        = 2.0           # second order viscosity

# time
dt          = 0.01         # dt for each step 
tmax        = 0.40          # total time    
dtoutput    = 0.01          # dt for output 
