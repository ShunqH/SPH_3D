# config
# box
NMAX        = 1100001       # maximum number of particles
N           = 1000000        # total particles
xmin        = -0.5          # left edge 
xmax        = 0.5           # right edge 
ymin        = -0.5          # y range
ymax        = 0.5           # y range
zmin        = -0.5          # z range
zmax        = 0.5           # z range

r1          = 0.05

# boundary conditions
X1BDLeft    = 0             # boundary condition for xmin, 0:free, 1:periodic
dx1l        = 0.05           # thinkness of the boundary (ghost) layer
X1BDRight   = 0             # boundary condition for xmax, 0:free, 1:periodic
dx1r        = 0.05           # thinkness of the boundary (ghost) layer

X2BDLeft    = 0             # boundary condition for ymin, 0:free, 1:periodic
dx2l        = 0.05           # thinkness of the boundary (ghost) layer
X2BDRight   = 0             # boundary condition for ymax, 0:free, 1:periodic
dx2r        = 0.05           # thinkness of the boundary (ghost) layer

X3BDLeft    = 0             # boundary condition for zmin, 0:free, 1:periodic
dx3l        = 0.05           # thinkness of the boundary (ghost) layer
X3BDRight   = 0             # boundary condition for zmax, 0:free, 1:periodic
dx3r        = 0.05           # thinkness of the boundary (ghost) layer


# density
rho         = 1.0           # uniform density

# pressure
totale      = 1.0           # total energy inject  
elow        = 1e-7          # lowest energy       
gamma       = 1.66667       # gamma for adiabatic EoS

# SPH parameters
hfact       = 1.5           # smooth range (=hfact*dx), should be less than nghost 

# viscosity 
alpha       = 1.0           # first order viscosity
beta        = 2.0           # second order viscosity

# time
dt          = 0.0001         # dt for each step 
tmax        = 0.10          # total time    
dtoutput    = 0.0001          # dt for output 
