# config
NMAX        = 1200001       # maximum number of particles
Nuniform    = 48            # n of particles in uniform length (1D) 
r1          = 0.2          # radius of the high energy region    
r2          = 1.0           # radius of the initial low energy region 

# density
rho         = 1.0           # uniform density


# pressure
totale      = 1.0           # total energy inject  
elow        = 1e-7          # lowest energy       
gamma       = 1.66667       # gamma for adiabatic EoS

# SPH parameters
hfact       = 1.5           # smooth range (=hfact*dx), should be less than nghost 

# viscosity 
alpha       = 1.0           # first order viscosity
beta        = 2.0           # second order viscosity

# time
dt          = 0.001         # dt for each step 
tmax        = 0.40          # total time    
dtoutput    = 0.01          # dt for output 
